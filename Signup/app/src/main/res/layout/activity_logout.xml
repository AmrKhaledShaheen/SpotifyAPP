<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logout">
    <RelativeLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_singer_songs"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:src="@android:drawable/ic_menu_camera"
            tools:src="@android:drawable/ic_menu_camera" />
        <TextView
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Click on the camera \n to choose profile picture."
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="280sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upper_layout"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text=" Logout"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/play_fe_hagat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/rounded_button_signup"
            android:text="Logout"
            android:onClick="logoutclicked"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150sp"
            android:text=" Sign up with\n another account"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/anotheraccclicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="170sp"
            android:background="@drawable/rounded_button_signup"
            android:text="Logout"
            android:onClick="anotheraccclicked"
            />


    </RelativeLayout>
</RelativeLayout>