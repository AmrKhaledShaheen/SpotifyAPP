<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logout">
    <RelativeLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_singer_songs"
        >
        <ImageView
            android:id="@+id/artist3imageView"
            android:layout_width="wrap_content"
            android:layout_height="250sp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/nancy_croped2"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upper_layout"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100sp"
            android:text=" Logout"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <Button
            android:id="@+id/play_fe_hagat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300sp"
            android:layout_marginTop="110sp"
            android:background="@drawable/rounded_button_signup"
            android:text="Logout"
            android:onClick="logoutclicked"
            />


    </RelativeLayout>
</RelativeLayout>